  );

  // Format date columns
  sheet.getRange('E:E').setNumberFormat('yyyy-mm-dd');
  sheet.getRange('F:F').setNumberFormat('yyyy-mm-dd');
  sheet.getRange('G:G').setNumberFormat('yyyy-mm-dd');
